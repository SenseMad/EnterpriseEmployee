<UserControl x:Class="EnterpriseEmployee.Style.TabControl.TabControlStyle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">

    <Grid x:Name="WindowsMouseLeft">
        <Border Background="#FFFFFF" CornerRadius="5,5,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#191919" Opacity="0.2" BlurRadius="7" ShadowDepth="2" Direction="315"/>
            </Border.Effect>
        </Border>

        <TextBlock x:Name="Title" Text="Сотрудники предприятия" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource GrayBrush}" FontSize="18" FontFamily="{StaticResource FontFamily}" Margin="15,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="22" Margin="0,0,5,0">
            <Button Style="{StaticResource ButtonMinimize}" Margin="0,0,5,0" Click="ButtonMinimize_Click"/>
            <Button Style="{StaticResource ButtonClose}" Click="ButtonClose_Click"/>
        </StackPanel>
    </Grid>
</UserControl>